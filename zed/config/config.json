// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // "disable_ai": true,
  "use_system_window_tabs": true,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "ui_font_family": "MonoLisa Nerd Font",
  "file_scan_exclusions": [
    "**/locals.fish",
    "**/.git",
    "**/node_modules",
    "**/.env",
    "**/secrets/**",
    "**/private/**",
    "**/.cache",
    "**/.ssh",
    "**/.DS_Store"
  ],
  "private_files": ["**/locals.fish", "**/.env", "**/secrets/**", "**/private/**", "**/.cache", "**/.ssh"],
  "vim_mode": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "minimap": { "show": "always" },
  "edit_predictions": {
    "mode": "subtle"
  },
  "icon_theme": "Catppuccin Macchiato",
  "tabs": { "file_icons": true },
  "base_keymap": "Atom",
  "theme": "Ros√© Pine Moon",
  "ui_font_size": 14.0,
  "buffer_font_size": 13.0,
  "buffer_font_family": "Cousine Nerd Font Mono",
  "buffer_font_features": {
    "liga": true,
    "calt": true,
    "titl": true
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_size": 13.0,
    "blinking": "off"
  },
  "preferred_line_length": 120,
  "soft_wrap": "editor_width",
  "lsp": {
    "sourcekit-lsp": {
      "binary": {
        "path": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp"
      }
    },
    "pyrefly": {
      "binary": {
        "path": "/Users/blacktop/.local/share/uv/tools/pyrefly/bin/pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "pyrefly": {
          "project_includes": ["**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          // "search_path": ["**"],
          "ignore_errors_in_generated_code": true
        }
      }
    },
    "clangd": {
      "binary": {
        "path": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clangd",
        "arguments": [
          "--background-index",
          "--header-insertion=never", // clangd has the tendency to insert unnecessary includes, so I prefer to just disable the feature.
          "--limit-results=5000", // The default limit for reference search results is too low for WebKit
          "--enable-config", // Enable reading .clangd file
          "-j",
          "10"
        ]
      }
    }
  },
  "languages": {
    "Swift": {
      "enable_language_server": true,
      "language_servers": ["sourcekit-lsp"],
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2
    },
    "Python": {
      "enable_language_server": true,
      "language_servers": ["pyrefly", "!pyright", "!pylsp"]
    }
  },
  "file_types": {
    "Scheme": ["sb", "in"]
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_profile": "ask",
    "always_allow_tool_actions": false,
    "enabled": true,
    "default_model": {
      "provider": "lmstudio",
      "model": "qwen/qwen3-coder-30b"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
